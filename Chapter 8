# 8-3. T-Shirt
def make_shirt(size, message):
    """Print a summary of the shirt size and message."""
    print(f"The shirt size is {size} and it will have the message: '{message}'.")

# Calling the function using positional arguments
make_shirt('Medium', 'Keep Moving Forward')

# Calling the function using keyword arguments
make_shirt(size='Large', message='Code is Life')


# 8-4. Large Shirts
def make_shirt(size='Large', message='I love Python'):
    """Create a shirt with a default large size and message."""
    print(f"The shirt size is {size} and it will have the message: '{message}'.")

# Making a large shirt with default message
make_shirt()

# Making a medium shirt with default message
make_shirt(size='Medium')

# Making a custom shirt with a different message
make_shirt(size='Small', message='Never Stop Learning')
